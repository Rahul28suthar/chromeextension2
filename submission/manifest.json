{
  "manifest_version": 3,
  "name": "LinkedIn Automation",
  "version": "1.0",

  "permissions": ["tabs", "scripting", "activeTab"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"]
    }
  ]
}
